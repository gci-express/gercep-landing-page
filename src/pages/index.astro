---
import CallToActionsSection from "@/components/index-pages/call-to-actions";
import ClientsSection from "@/components/index-pages/sections/clients";
import HeroSection from "@/components/index-pages/sections/hero";
import OurValuesSection from "@/components/index-pages/sections/our-values";
import ServicesSection from "@/components/index-pages/sections/services";
import TeamSection from "@/components/index-pages/sections/teams";
import Footer from "@/components/shared/footer";
import Navbar from "@/components/shared/navbar";
import Layout from "@/layouts/layout.astro";
---

<Layout
  title="GERCEP - Kirim Senyuman Sampai Tujuan | Modern Logistics Solutions"
>
  <!-- Critical above-the-fold: hydrate immediately -->
  <Navbar client:load/>

  <main class="flex-1 relative z-10">
    <HeroSection client:load/>

    <!-- Below-the-fold: hydrate when visible -->
    <div aria-hidden="true" class="section-anchor" id="clients"/>
    <ClientsSection client:visible/>

    <div aria-hidden="true" class="section-anchor" id="services"/>
    <ServicesSection client:visible/>

    <div aria-hidden="true" class="section-anchor" id="our-values"/>
    <OurValuesSection client:visible/>

    <div aria-hidden="true" class="section-anchor" id="cta"/>
    <CallToActionsSection client:visible/>

    <div aria-hidden="true" class="section-anchor" id="team"/>
    <TeamSection client:visible/>
  </main>

  <Footer client:visible/>
</Layout>

<style>
  .section-anchor {
    display: block;
    height: 0;
    margin: 0;
    position: relative;
    scroll-margin-top: 120px;
  }
</style>
